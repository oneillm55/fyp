<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_background"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/totalCO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0.0 Total CO2"
            android:textSize="30dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/big3Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/rec1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rec1"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/rec1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rec//////////////////"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/rec2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rec2"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/rec2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rec2////////////////////////////////////"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/rec3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rec3"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/rec3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rec3////////////////////////////////////"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pieChartLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>
            <TextView
                android:id="@+id/clickPCTextView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:text="Click on the pie chart sections to view your recommendations"
                android:textSize="12dp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/pieChartLegend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/flightIconPC"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_flight_24"
                    app:tint="@color/blue_jeans" />

                <TextView
                    android:id="@+id/flightTitlePC"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingRight="20dp"
                    android:text="Flights"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/foodIconPC"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_fastfood_24"
                    app:tint="@color/cyber_yellow" />

                <TextView
                    android:id="@+id/foodTitlePC"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="20dp"
                    android:text="Food"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/clothingIconPC"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hanger"
                    app:tint="@color/heat_wave" />

                <TextView
                    android:id="@+id/clothesTitlePC"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:paddingLeft="4dp"
                    android:text="Clothing"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                style="@style/border1"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/recommendationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_1"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/recommendationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Rec Title"
            android:textSize="30dp" />
        <TextView
            style="@style/border2"/>
        <TextView
            android:id="@+id/recommendationParagraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Rec Paragraphh
//////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////
////////////////////////////////////////////////////////
"
            android:textSize="18dp" />
        <TextView
            style="@style/border1"/>

    </LinearLayout>
        <LinearLayout
            android:id="@+id/flightPieChartLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/flightPieChart"
                android:layout_width="250dp"
                android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>
            <TextView
                android:id="@+id/flightPieChartLabel"
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:textAlignment="center"
                android:text="The impact of your flights broken down"
                android:textSize="25dp"/>


            <TextView
                style="@style/border1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/foodPieChartLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/foodPieChartLabel"
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:textAlignment="center"
                android:text="The impact of your food consumption broken down"
                android:textSize="25dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/foodPieChart"
                android:layout_width="250dp"
                android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>


            <TextView
                style="@style/border1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/clothingPieChartLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/clothingPieChart"
                android:layout_width="250dp"
                android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>
            <TextView
                android:id="@+id/clothingPieChartLabel"
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:textAlignment="center"
                android:text="The impact of your clothing consumption broken down"
                android:textSize="25dp"/>


            <TextView
                style="@style/border1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/barChartLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/barChartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Rest of World" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"></com.github.mikephil.charting.charts.BarChart>


            <TextView
                android:id="@+id/elephant_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1.5 Elephants" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>