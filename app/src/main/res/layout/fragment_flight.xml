<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_background"
    android:id="@+id/flight_fragment">


    <FrameLayout
        android:id="@+id/flight_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/flightIcon"
            android:layout_width="203dp"
            android:layout_height="130dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/ic_baseline_flight_24" />
        <TextView
            android:id="@+id/flightFootprint"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColorHint="#F6F6F6" />

        <EditText
            android:id="@+id/editTextDepart"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="Depart From.."
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColorHint="#F6F6F6" />

        <EditText
            android:id="@+id/editTextArrive"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="Arrive In.."
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColorHint="#F6F6F6" />
        <Spinner
            android:id="@+id/return_spinner"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColorHint="#F6F6F6" />
        <Spinner
            android:id="@+id/class_spinner"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColorHint="#F6F6F6" />

        <Button
            android:id="@+id/calculateFlightButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_marginTop="8dp"
            android:text="Calculate" />
        <Button
            android:id="@+id/saveFlightButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_marginTop="8dp"
            android:text="Save Flight"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/viewFlightButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_marginTop="8dp"
            android:text="View Flights" />
    </LinearLayout>
    </FrameLayout>

</RelativeLayout>